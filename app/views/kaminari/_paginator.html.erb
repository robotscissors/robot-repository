<style>
.pagination{padding:.3em;margin:.3em 0 .3em .3em; font: 13.34px helvetica,arial,freesans,clean,sans-serif;}
.pagination a{padding:.1em .3em;margin:.2em;border:1px solid #FFD94C;text-decoration:none;color:##FFD94C;}
.pagination a:hover,.pagination a:active{border:1px solid #FFD94C;color:#FFD94C;}
.pagination span.current{padding:.1em .3em;margin:.2em;border:1px solid #FFD94C;font-weight:bold;background-color:#369;color:#FFD94C;}
.pagination span.disabled{padding:.1em .3em;margin:.2em;border:1px solid #eee;color:#ddd;}
</style>
<%= paginator.render do -%>
<div class="pagination"><%= prev_page_tag -%><%= next_page_tag -%></div>
<% end -%>

<div class="row">
  <div class="col-md-12">
    <div class="user-forms2 well well-lg">
      <h2 class="form-title">Resend unlock instructions</h2>

      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %> <%= f.email_field :email, autofocus: true, :class => "textfield"  %>
        </div>

        <div class="actions">
          <%= f.submit "Resend unlock instructions", :class=>"btn btn-primary login"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

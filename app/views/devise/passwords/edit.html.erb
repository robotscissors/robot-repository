<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <div class="user-forms well well-lg">
      <h2 class="form-title">Change your password</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <div class="field">
          <%= f.label :password, "New password" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => "textfield" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "textfield" %>
        </div>
        <div class="actions buttons-centered">
          <%= f.submit "Change my password", :class=>"btn btn-primary login" %>
        </div>
      <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-1">
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-1">
  <div class="user-forms well well-lg">
    <h2 class="form-title">Registration</h2>
    <p class="form-notes">Please register using the form below.</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <strong>Full name</strong><%= f.text_field :fullname, autofocus: true, :class => "textfield" %>
      </div>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, :class => "textfield"  %>
      </div>
      <div class="form-instructions">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", :class => "textfield"  %>
      </div>

      <div class="field">
        <strong>Confirmation</strong>
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "textfield"  %>
      </div>

      <div class="actions buttons-centered">
        <%= f.submit "Register Now", :class=>"btn btn-primary login"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
<div class="col-md-6 col-md-offset-1 text-information-topdown page-icon">
  <%= image_tag('login-lightbulb.png', :style => "width:80%;margin-top:40px;" ) %>
</div>
</div>

</div>
